<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
      }
      .btn-edit {
        cursor: pointer;
        border-radius: 3px;
        height: 25px;
        border: none;
        background: orange;
        outline: none;
        width: 60px;
      }

      .btn-delete {
        cursor: pointer;
        border-radius: 3px;
        height: 25px;
        border: none;
        background: #ff0023;
        outline: none;
        width: 60px;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>

      <% for(let i = 0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%=dataTable[i].id %>"
            class="btn-edit"
            type="button"
            >Eidt</a
          >
          <a class="btn-delete" type="button">Delete</a>
        </td>
        <!-- <td><button>Reomove</button></td> -->
      </tr>
      <% } %>
    </table>
  </body>
</html>
